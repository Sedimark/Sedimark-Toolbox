FROM python:3.8-slim-bullseye

RUN apt-get update && apt-get install libpq-dev -y && apt-get clean && rm -rf /var/lib/apt/lists/*

RUN set -ex \
    && pip install --upgrade pip setuptools &&\
    pip install psycopg2-binary &&\
    pip install mlflow &&\
    pip install boto3 &&\
    pip install protobuf

WORKDIR /server

EXPOSE 5000

CMD mlflow server \
    --backend-store-uri postgresql+psycopg2://postgres:postgres@mlflow_postgres:5432/mlflow_db \
    --default-artifact-root s3://models/ \
    --app-name basic-auth \
    --host 0.0.0.0
